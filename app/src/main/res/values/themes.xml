<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cryptonews" parent="Theme.MaterialComponents.Light.NoActionBar">


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorOnPrimary">@color/black</item>
        <item name="materialButtonStyle">@style/MaterialButtonDefault</item>
        <item name="android:colorBackground">@color/background</item>


        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="Q">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>


    </style>



    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
    </style>



    <style name="ChipTextStyle_Selected">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ChipTextStyle_UnSelected">
        <item name="android:textColor">#979797</item>
    </style>


    <style name="MaterialCardViewDefault" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="ImageViewSentimentBackground" parent="">
        <item name="android:src">@drawable/shape_circle_white</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="Chip.Choice.Selectable" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/custom_chips_text_color</item>
        <item name="chipBackgroundColor">@color/custom_chips_background_color</item>
        <item name="chipStrokeColor">@color/custom_chips_strokecolor_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIcon">@drawable/ic_done</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIconEnabled">true</item>
    </style>

    <style name="Chip.Choice.Cancelable" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/background_third</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
        <item name="closeIconTint">@color/grey_500</item>
        <item name="closeIconSize">24dp</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="checkedIconEnabled">false</item>
    </style>

    <style name="MaterialButtonDefault" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_6</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/material_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">8dp</item>
    </style>


</resources>